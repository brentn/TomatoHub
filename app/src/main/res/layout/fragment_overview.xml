<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brentandjody.tomatohub.OverviewFragment"
    android:background="#5744a2">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/message_area"
        android:background="@color/colorPrimary"
        android:paddingTop="30dp"
        android:padding="20dp"
        android:elevation="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/wifi_message"
            android:background="@color/colorPrimary"
            android:textColor="@color/primary_material_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/status_message"
            android:textColor="@color/primary_material_light"
            android:paddingTop="8dp"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/devices"
                android:paddingTop="8dp"
                android:textColor="#4dd0e1"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/are_connected"
                android:paddingTop="8dp"
                android:textColor="@color/primary_material_light"
                android:paddingLeft="8dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_below="@+id/message_area"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:padding="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/internet"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="false"
            android:focusable="false"
            android:layout_alignParentStart="false"
            android:src="@drawable/internet"
            android:layout_below="@+id/message_area"
            android:layout_alignParentLeft="false"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:layout_column="0"
            android:layout_row="0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/router"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="router"
            android:layout_below="@+id/internet"
            android:layout_toRightOf="@+id/internet"
            android:src="@drawable/router"
            android:layout_column="1"
            android:layout_row="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/lan_0"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@drawable/circle"
            android:textColor="#ffffff"
            android:textSize="20pt"
            android:textIsSelectable="true"
            android:gravity="center|center_vertical"
            android:maxLines="1"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/lan_1"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@drawable/circle"
            android:textColor="#ffffff"
            android:textSize="20pt"
            android:textIsSelectable="true"
            android:gravity="center|center_vertical"
            android:maxLines="1"
            android:layout_marginTop="30dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/lan_2"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@drawable/circle"
            android:textColor="#ffffff"
            android:textSize="20pt"
            android:textIsSelectable="true"
            android:gravity="center|center_vertical"
            android:maxLines="1"
            android:layout_marginLeft="30dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/lan_3"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@drawable/circle"
            android:textColor="#ffffff"
            android:textSize="20pt"
            android:textIsSelectable="true"
            android:gravity="center|center_vertical"
            android:maxLines="1"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/lan_4"
            android:layout_column="2"
            android:layout_row="0"
            android:background="@drawable/circle"
            android:textColor="#ffffff"
            android:textSize="20pt"
            android:textIsSelectable="true"
            android:gravity="center|center_vertical"
            android:maxLines="1"
            android:visibility="gone" />

    </GridLayout>

</RelativeLayout>
