<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.brentandjody.tomatohub.SpeedTestActivity"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/internet"
        android:src="@drawable/internet"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/internet_line" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/internet_line"
        android:layout_centerHorizontal="true"
        android:src="@drawable/line_90"
        android:layout_above="@+id/router" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/internet_speed"
        android:id="@+id/textView5"
        android:layout_above="@+id/pb_internet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/internet"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff"
        android:layout_marginBottom="-10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/internet_speed"
        android:layout_below="@+id/internet"
        android:layout_toRightOf="@+id/internet"
        android:layout_toEndOf="@+id/internet"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_internet"
        android:layout_alignBottom="@+id/internet_speed"
        android:layout_toRightOf="@+id/router"
        android:layout_toEndOf="@+id/router"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/router"
        android:src="@drawable/router"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/phone_line"
        android:layout_below="@+id/router"
        android:layout_centerHorizontal="true"
        android:src="@drawable/line_90" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/wifi_speed"
        android:id="@+id/textView6"
        android:textColor="#ffffff"
        android:layout_above="@+id/pb_wifi"
        android:layout_toRightOf="@+id/router"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="-10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/wifi_speed"
        android:layout_below="@+id/router"
        android:layout_toRightOf="@+id/router"
        android:layout_toEndOf="@+id/router"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_wifi"
        android:layout_alignBottom="@+id/wifi_speed"
        android:layout_toRightOf="@+id/internet"
        android:layout_toEndOf="@+id/internet"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:layout_below="@+id/phone_line"
        android:layout_centerHorizontal="true"
        android:src="@drawable/phone" />

</RelativeLayout>
